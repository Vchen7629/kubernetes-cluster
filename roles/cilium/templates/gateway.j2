apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  annotations:
{% for key, value in cilium_map.gateway.hubble.ui.annotations | default({}) | dictsort %}
    {{ key }}: {{ value }}
{% endfor %}
  name: {{ cilium_vars.kubernetes.gateway.service }}
  namespace: {{ cilium_vars.kubernetes.namespace }}
spec:
  gatewayClassName: cilium
  listeners:
    - allowedRoutes:
        kinds:
          - group: gateway.networking.k8s.io
            kind: HTTPRoute
        namespaces:
          from: All
      hostnames: 
        - '{{ cilium_map.gateway.frontend.base_hostname }}'
        - '{{ cilium_map.gateway.frontend.hostname }}'
      name: frontend-http
      port: 80
      protocol: HTTP